<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.spconrad.udacityp3projectquizzerapp.MainActivity">

    <TextView
        style="@style/question_text_style"
        android:id="@+id/question_textView"
        android:text="Hello World!" />

    <RadioButton
        style="@style/answer_text_style"
        android:id="@+id/answer_1_textView"
        android:text="Answer 1" />

    <RadioButton
        style="@style/answer_text_style"
        android:id="@+id/answer_2_textView"
        android:text="Answer 2" />

    <RadioButton
        style="@style/answer_text_style"
        android:id="@+id/answer_3_textView"
        android:text="Answer 3" />

    <RadioButton
        style="@style/answer_text_style"
        android:id="@+id/answer_4_textView"
        android:text="Answer 4" />

    <Button
        style="@style/button_style"
        android:text="Submit Answer" />


</LinearLayout>
